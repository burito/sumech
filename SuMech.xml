<GuiXml>
  <Controls>
    <TopLevelControl name="SuMechBox" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="200" y="25" />
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-20" />
      <OnMoveStop>
        SuMech.OnIndicatorMoveStop()
      </OnMoveStop>
      <Controls>
      <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" alpha="0.5"/>
        <Label name="$(parent)Title" width="200" height="25" font="ZoFontGameSmall" inheritAlpha="true" color="DDDDCC"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="SuMech">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="-15" />
        </Label>
        <Label name="$(parent)Job" width="200" height="25" font="ZoFontGame" inheritAlpha="true" color="CCCCCC"
            wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Job">
          <Anchor point="TOP" relativeTo="$(parent)Title" relativePoint="BOTTOM" />
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>